# =============================================================================
# MarketPulse Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# =============================================================================
# Application Configuration
# =============================================================================
NEXT_PUBLIC_APP_NAME=MarketPulse
# Production URL (change for your domain)
NEXT_PUBLIC_APP_URL=https://your-domain.com
# Development: NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=production

# =============================================================================
# Database Configuration (Railway PostgreSQL)
# =============================================================================
# Add connection pooling parameters for scalability:
# ?connection_limit=20&pool_timeout=10&connect_timeout=10
DATABASE_URL=postgresql://user:password@host:5432/database?connection_limit=20&pool_timeout=10&connect_timeout=10

# =============================================================================
# Authentication (NextAuth.js)
# =============================================================================
# Production: Must match your domain
NEXTAUTH_URL=https://your-domain.com
# Development: NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-min-32-chars-very-important

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# Stripe Payment Configuration
# =============================================================================
# Use sk_live_... and pk_live_... for production
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_test_...

# Stripe Price IDs (from your Stripe Dashboard)
# These are your ACTUAL production Stripe price IDs
STRIPE_STARTER_PRICE_ID=price_1SoEPrRmoXSly4A3ARWfwpbc
STRIPE_PRO_PRICE_ID=price_1SoES1RmoXSly4A3dVUJFoMS
STRIPE_ENTERPRISE_PRICE_ID=price_1SoETFRmoXSly4A3McPoBTHV

# =============================================================================
# Plan Configurations (SINGLE SOURCE OF TRUTH)
# =============================================================================
# Prices in cents (e.g., 2000 = $20.00)
STRIPE_STARTER_PRICE=2000
STRIPE_PRO_PRICE=5000
STRIPE_ENTERPRISE_PRICE=20000

# Competitor limits per plan
STRIPE_STARTER_LIMIT=5
STRIPE_PRO_LIMIT=15
STRIPE_ENTERPRISE_LIMIT=50

# =============================================================================
# Email Configuration (Resend)
# =============================================================================
EMAIL_FROM=noreply@your-domain.com
EMAIL_REPLY_TO=support@your-domain.com
RESEND_API_KEY=re_...

# =============================================================================
# SMS Configuration (Twilio - Optional)
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# AI/ML Configuration (OpenAI)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
# Used for: Competitor discovery, AI-powered ranking
OPENAI_API_KEY=sk-proj-...

# =============================================================================
# Competitor Discovery (Google Custom Search)
# =============================================================================
# Setup instructions:
# 1. Go to: https://programmablesearchengine.google.com/
# 2. Create a new search engine
# 3. Enable "Search the entire web"
# 4. Get your Custom Search Engine ID (cx parameter)
# 5. Get API key from: https://console.cloud.google.com/apis/credentials
# Free tier: 100 queries/day, then $5/1000 queries
GOOGLE_SEARCH_API_KEY=AIzaSy...
GOOGLE_SEARCH_ENGINE_ID=...

# Optional: Bing Search API (alternative/backup to Google)
# Get from: https://www.microsoft.com/en-us/bing/apis/bing-web-search-api
# Pricing: $3/1000 transactions (cheaper than Google)
# BING_SEARCH_API_KEY=...

# =============================================================================
# Cron Jobs & Scheduled Tasks
# =============================================================================
CRON_SECRET=your-secure-cron-secret-token

# =============================================================================
# Trial Configuration
# =============================================================================
TRIAL_DURATION_DAYS=14
TRIAL_GRACE_PERIOD_DAYS=3
TRIAL_COMPETITOR_LIMIT=3

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_SIGNUP=true
ENABLE_TRIALS=true
ENABLE_ANALYTICS=true
ENABLE_SMS_ALERTS=false
ENABLE_WEBHOOKS=true

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# Crawler/Scraper Configuration
# =============================================================================
PLAYWRIGHT_EXECUTABLE_PATH=
CRAWL_DEFAULT_FREQUENCY_MINUTES=60
CRAWL_MAX_CONCURRENT=5
CRAWL_TIMEOUT_MS=30000
CRAWLER_TIMEOUT_MS=30000
CRAWLER_MAX_RETRIES=3

# =============================================================================
# Monitoring & Error Tracking (Optional)
# =============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
# Development: SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_GA_MEASUREMENT_ID=
LOGTAIL_SOURCE_TOKEN=
